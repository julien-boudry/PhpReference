{
    "name": "julien-boudry/php-reference",
    "type": "library",
    "require": {
        "haydenpierce/class-finder": "^0.5.3",
        "phpdocumentor/reflection-docblock": "^5.6",
        "latte/latte": "^3.0",
        "league/flysystem": "^3.29",
        "symfony/console": "^7.3",
        "laravel/prompts": "^0.3",
        "roave/better-reflection": "^6.65",
        "phpunit/php-timer": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "julien-boudry/condorcet": "dev-dev-5.0",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "bin": [
        "bin/php-reference"
    ],
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-4": {
            "JulienBoudry\\PhpReference\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JulienBoudry\\PhpReference\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Julien Boudry",
            "email": "julien.boudry@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "document": "php Dev/update-documentation.php",
        "lint": "php-cs-fixer fix",
        "pintify": "@lint",
        "phpstan": "phpstan analyse --no-interaction",
        "rector": "rector process --dry-run"
    },
    "scripts-descriptions": {
        "test": "Run all tests!",
        "document": "Generate documentation",
        "pintify": "Run laravel Pint",
        "phpstan": "Run PHPStan",
        "rector": "Run rector"
    }
}
